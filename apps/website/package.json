{
  "name": "@ocoda/website",
  "version": "1.0.0",
  "description": "Ocoda.be Website",
  "type": "module",
  "scripts": {
    "build:lambda": "rm -rf ./build && remix build && esbuild ./src/lambda/index.ts --bundle --outfile=./build/lambda/index.js --minify --tree-shaking --target=node18  --platform=node --tsconfig=./tsconfig.lambda.json --external:aws-sdk --external:@aws-sdk",
    "build": "remix vite:build",
    "dev": "remix vite:dev --host",
    "start": "remix-serve ./build/index.js",
    "format": "biome format --write",
    "lint": "biome check --write"
  },
  "author": "Dries Hooghe <dries@ocoda.be>",
  "license": "ISC",
  "dependencies": {
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@remix-run/serve": "^2.0.1",
    "i18next": "^23.16.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-backend": "^2.6.2",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.1.0",
    "remix-i18next": "^6.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@ocoda/website-config": "workspace:*",
    "@remix-run/dev": "^2.13.1",
    "@remix-run/server-runtime": "^2.0.1",
    "@types/aws-lambda": "^8.10.125",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.19.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vite-env-only": "^3.0.3",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
